<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:theme="@style/AppTheme.PopupOverlay"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:scrollbars="none">
<LinearLayout
    android:id="@+id/time_set_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="100dp"
    android:background="@color/background_gray"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="@drawable/layout_border_style"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="20dp"
                android:textColor="@color/black">

            </TextView>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center_vertical"-->
<!--                android:text="时间校准"-->
<!--                android:textSize="16dp"-->
<!--                android:textColor="@color/black">-->
<!--            </TextView>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="@string/time_set_range"
                android:textSize="16dp"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="@string/time_set_interval"
                android:textSize="18dp"
                android:textColor="#2196F3">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/time_set_test"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="#2196F3">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:text="@string/time_set_description"
                android:textSize="14dp"
                android:textColor="#A3A3A3">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/cgq">

            </ImageView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout_border_style"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/time_btn_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            android:background="@drawable/layout_border_style"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="@string/quick_time_set">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/time_set_1"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@mipmap/up">
                </ImageView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_five_minute"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/record_per_five_minute">
            </Button>
            <Button
                android:id="@+id/btn_ten_minute"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/record_per_ten_minute"></Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_half_hour"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/record_half_hour"></Button>
            <Button
                android:id="@+id/btn_per_hour"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/record_per_hour"></Button>
        </LinearLayout>
        <LinearLayout

            android:id="@+id/list3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_two_hour"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/record_per_two_hour"></Button>
            <Button
                android:id="@+id/btn_four_hour"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/record_per_four_hour"></Button>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:paddingRight="10dp"
            android:background="@drawable/layout_border_style"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/time_btn_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:text="@string/custom_time_set">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/time_set_2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:src="@mipmap/down">
                    </ImageView>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/list4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/interval_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/interval_time_hint"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:digits="0123456789"
                    android:textColor="@color/black"
                    android:padding="5dp">
                </EditText>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/background_gray">
                </LinearLayout>
                <EditText
                    android:id="@+id/test_time"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/test_time_hint"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:digits="0123456789"
                    android:textColor="@color/black"
                    android:padding="5dp">
                </EditText>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="100dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/order_confirm"
            android:textSize="20dp"
            android:background="@drawable/button_style_real_time_data">
        </Button>
    </LinearLayout>



</LinearLayout>
</ScrollView>
    </LinearLayout>