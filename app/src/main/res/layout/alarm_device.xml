<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:theme="@style/AppTheme.PopupOverlay"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!--        <TextView-->
        <!--            android:id="@+id/alarm_device_describe"-->
        <!--            android:layout_weight="4"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:text="未找到报警设备"-->
        <!--            android:gravity="center"-->
        <!--            android:textColor="@color/black"-->
        <!--            android:textSize="20dp">-->
        <!--        </TextView>-->

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_weight="1"-->
        <!--            android:gravity="center">-->
        <!--            <ImageView-->
        <!--                android:id="@+id/chemins_official_account"-->
        <!--                android:layout_width="300dp"-->
        <!--                android:layout_height="300dp"-->
        <!--                android:background="@mipmap/chemins_official_account">-->

        <!--            </ImageView>-->
        <!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/phone"
                android:textColor="@color/black"
                android:textSize="18dp">

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/setting_property_edit"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789"
                android:maxLength="11"
                android:paddingLeft="5dp">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/upper_limit"
                    android:textColor="@color/black"
                    android:textSize="18dp">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_property_edit"
                    android:padding="2dp"
                    android:digits="0123456789"
                    android:maxLength="11"
                    android:paddingLeft="5dp">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/redundancy_capability"
                    android:textColor="@color/black"
                    android:textSize="18dp">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_property_edit"
                    android:padding="2dp"
                    android:digits="0123456789"
                    android:maxLength="11"
                    android:paddingLeft="2dp">

                </EditText>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/lower_limit"
                    android:textColor="@color/black"
                    android:textSize="18dp">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_property_edit"
                    android:padding="2dp"
                    android:digits="0123456789"
                    android:maxLength="11"
                    android:paddingLeft="5dp">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/redundancy_capability"
                    android:textColor="@color/black"
                    android:textSize="18dp">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_property_edit"
                    android:padding="2dp"
                    android:digits="0123456789"
                    android:maxLength="11"
                    android:paddingLeft="2dp">

                </EditText>
            </LinearLayout>



        </LinearLayout>

<!--  notify   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/test_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></EditText>

                <Button
                    android:id="@+id/test_btn5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:text="确定notify"></Button>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/test_result"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </ScrollView>

        </LinearLayout>

<!--   read     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/test_edit_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></EditText>

                <Button
                    android:id="@+id/test_btn6"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:text="确定read"></Button>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/test_result_2"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </ScrollView>

        </LinearLayout>

<!--   write     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/test_edit_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></EditText>

                <Button
                    android:id="@+id/test_btn7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:text="确定Write"></Button>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/test_result_3"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>